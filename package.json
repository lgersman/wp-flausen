{
  "name": "wp-flausen",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o ./dist/docs/storybook",
    "build": "lerna run build",
    "build:watch": "lerna run build:watch",
    "lerna": "lerna",
    "commit": "lint-staged && git-cz --disable-emoji",
    "lint": "prettier --check '**/*.{js,jxs,json,css,scss,php,md,yml}'; eslint --ext js,jsx .; stylelint '**/*.{css,scss}'",
    "lint-fix": "prettier --check --write '**/*.{js,jsx,json,css,scss,php,md,yml}'; eslint --ext js,jsx --fix .; stylelint '**/*.{css,scss}' --fix"
  },
  "workspaces": [
    "packages/*"
  ],
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@prettier/plugin-php": "^0.17.6",
    "@storybook/addon-actions": "^6.4.8",
    "@storybook/addon-essentials": "^6.4.8",
    "@storybook/addon-links": "^6.4.8",
    "@storybook/react": "^6.4.8",
    "babel-loader": "^8.2.3",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "git-cz": "^4.8.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "sass": "^1.44.0",
    "storybook-builder-vite": "^0.1.10",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-scss": "^4.0.0",
    "vite": "^2.6.14"
  },
  "lint-staged": {
    "*.{js,jsx,json,css,scss,php,md,yml}": "prettier --write",
    "*.{js,jsx}": "eslint --fix",
    "*.{css,scss}": "stylelint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": true,
    "arrowParens": "always",
    "bracketSpacing": false
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended-scss",
      "stylelint-config-prettier"
    ]
  }
}
